<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.taquio.trasearch6.ForVerification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="For Verification"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="100dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ver_ID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="5"
            android:background="@drawable/border"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/ver_Selfie"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="5"
            android:background="@drawable/border"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:weightSum="10">
        <Button
            android:id="@+id/ver_IDbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Choose Valid ID"/>
        <Button
            android:id="@+id/ver_Selfiebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Take a Selfie"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:weightSum="10">
        <Button
            android:id="@+id/ver_UploadExec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:enabled="false"
            android:text="Upload"/>
        <Button
            android:id="@+id/ver_Skipbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:enabled="false"
            android:text="Skip"/>
    </LinearLayout>

</LinearLayout>
