<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toptext"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profile_photo"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="test.juan"
                android:layout_toRightOf="@+id/profile_photo"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/username"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 DAYS AGO"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:id="@+id/image_time_posted"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="60dp"/>
            <ImageView
                android:id="@+id/ivEllipses"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_ellipses"/>
        </RelativeLayout>


        <com.example.taquio.trasearch6.Utils.SquareImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toptext"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/heartLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_below="@id/post_image">


            <ImageView
                android:id="@+id/image_heart_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/likegreen"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/image_heart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/likewhite"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/direct_message"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_message"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/bookmark"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="#123"
                android:textColor="#00ff3c"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:id="@+id/image_likes"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/heartLayout"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a sample text ..."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:id="@+id/image_caption"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="#0"-->
            <!--android:layout_marginLeft="50dp"-->
            <!--android:textColor="@color/grey"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_below="@+id/image_caption"-->
            <!--android:textSize="20sp"/>-->
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>