<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bsn1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="15">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:src="@drawable/trash"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="100">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/icon_user"
                android:paddingRight="12dp"
                android:paddingLeft="15dp"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/icon_name"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:hint="Full Name"
                android:inputType="text"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/ic_busin"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:hint="Business Name"
                android:inputType="textPassword"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/ic_loc"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:hint="Location"
                android:inputType="textPassword"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:drawableRight="@drawable/ic_website"
                android:hint="Business Website"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/ic_tele"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:hint="Phone No."
                android:inputType="phone"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/icon_phone"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:hint="Mobile No."
                android:inputType="phone"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/registerBtn1"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:background="@drawable/btn"
                android:stateListAnimator="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="14.2857142857"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Cancel"
                android:textSize="17sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>