<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.taquio.trasearch6.Utils.SquareImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout1"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/post_image"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/heartLayout"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/image_heart_red"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/likegreen"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/image_heart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/likewhite"
                        android:visibility="visible"/>


                </RelativeLayout>
                <TextView
                    android:id="@+id/image_time_posted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="15dp"
                    android:text="3 DAYS AGO"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/ivEllipses"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_ellipses"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout2"
                android:layout_marginBottom="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/image_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#123 likes"
                    android:layout_margin="10dp"
                    android:textColor="#00ff3c"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/image_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_likes"
                    android:layout_marginTop="15dp"
                    android:layout_margin="10dp"
                    android:text=" a sample description..."
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <!--<TextView-->
                    <!--android:id="@+id/image_comments_link"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/image_caption"-->
                    <!--android:layout_marginTop="15dp"-->
                    <!--android:text="View all 3 comments"-->
                    <!--android:textColor="@color/grey"-->
                    <!--android:textSize="18sp"/>-->
                <android.support.v4.widget.Space
                    android:id="@+id/space"
                    android:layout_below="@+id/image_caption"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <RelativeLayout
                    android:id="@+id/blank"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/space"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MEET THE SELLER"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/blank">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="0.5dp"/>


                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/profile_photo"
                        android:text="juan dela cruz"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/layout_bottom_navigation_view"/>

</RelativeLayout>

















