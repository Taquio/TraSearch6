<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="20dp"
    tools:context="com.example.taquio.trasearch6.RegisterActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ts"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout1"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Create an account"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/registerImg1"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder2"
                    android:padding="5dp"
                    android:src="@drawable/user"/>

                <EditText
                    android:id="@+id/field_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/registerImg1"
                    android:background="@drawable/backgroundborder"
                    android:hint="Choose a username"
                    android:paddingLeft="15dp"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/registerImg2"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder2"
                    android:padding="5dp"
                    android:src="@drawable/password"/>

                <EditText
                    android:id="@+id/field_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/registerImg2"
                    android:background="@drawable/backgroundborder"
                    android:hint="Create a password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/registerImg3"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder2"
                    android:padding="5dp"
                    android:src="@drawable/password"/>

                <EditText
                    android:id="@+id/field_cPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/registerImg3"
                    android:background="@drawable/backgroundborder"
                    android:hint="Confirm your password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/registerImg4"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder2"
                    android:padding="5dp"
                    android:src="@drawable/ic_email"/>

                <EditText
                    android:id="@+id/field_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/registerImg4"
                    android:background="@drawable/backgroundborder"
                    android:hint="Enter your email address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout5"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttondesign"
                    android:text="Create account"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout6"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/registerTx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Return to login"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
