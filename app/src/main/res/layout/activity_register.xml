<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taquio.trasearch6.RegisterActivity"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        app:cardElevation="12dp"
        >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/white">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/appHeader"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorWhite"
                    android:paddingLeft="78sp"
                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_grid_24dp"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:id="@+id/field_email"
                    android:inputType="textEmailAddress"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:hint="Username"
                    android:layout_gravity="center"
                    android:id="@+id/field_username"
                    android:inputType="text"/>
                <EditText
                    android:layout_width="300dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Name"
                    android:id="@+id/field_name"
                    android:layout_gravity="center"
                    android:inputType="text"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textAlignment="center"
                    android:id="@+id/field_password"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_below="@+id/field_email"
                    android:inputType="textPassword"/>

                <Button
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_submit"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonstyleselector"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Submit"
                    android:layout_below="@+id/field_password"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
