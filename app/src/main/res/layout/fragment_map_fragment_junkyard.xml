    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lljunkyard"
    android:orientation="vertical"
    tools:context="com.example.taquio.trasearch6.MapFragmentJunkyard">

    <!-- TODO: Populate the Recycling Center -->
