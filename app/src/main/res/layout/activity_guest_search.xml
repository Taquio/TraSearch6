<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/ts"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_weight="85"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="100">

            <EditText
                android:layout_width="320dp"
                android:layout_height="0dp"
                android:layout_margin="6dp"
                android:layout_weight="9"
                android:background="@drawable/border"
                android:drawableRight="@drawable/iconsearch"
                android:hint="Search for recycling tutorials"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:textColorHint="#000000"/>

            <Button
                android:id="@+id/guest_SignIn"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:layout_weight="10"
                android:background="@drawable/btn"
                android:stateListAnimator="@null"
                android:text="Sign In"/>

            <Button
                android:id="@+id/guest_Reg"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@drawable/btn"
                android:stateListAnimator="@null"
                android:text="Register"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:text="OR"
                android:textColor="#000000"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="10"
                android:background="@drawable/btnfacebook"
                android:drawableLeft="@drawable/facebook"
                android:paddingRight="20dp"
                android:stateListAnimator="@null"
                android:text="Sign in with Facebook"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/registerBtn1"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@drawable/btngoogle"
                android:drawableLeft="@drawable/gg"
                android:paddingLeft="19dp"
                android:paddingRight="30dp"
                android:stateListAnimator="@null"
                android:text="Sign in with Google"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>